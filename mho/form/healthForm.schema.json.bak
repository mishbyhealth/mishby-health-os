{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "HealthForm",
  "type": "object",
  "properties": {
    "name": { "type": "string", "minLength": 1 },
    "age": { "type": "string", "pattern": "^\\d+$" },
    "goal": {
      "type": "string",
      "enum": ["general_wellness", "weight_management", "bp_control", "sugar_control"]
    }
  },
  "required": ["name", "age", "goal"],
  "additionalProperties": true
}
