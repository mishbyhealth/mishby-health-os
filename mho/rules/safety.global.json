{
  "scope": "global",
  "version": 1,
  "rules": [
    {
      "id": "contra.ckd.high_potassium_push",
      "when": {
        "conditions": ["ckd"]
      },
      "forbid": ["potassium_boosting_advice", "salt_substitutes_with_k"]
    },
    {
      "id": "contra.diabetes.avoid_added_sugar",
      "when": {
        "conditions": ["diabetes"]
      },
      "forbid": ["added_sugar", "sugary_drinks", "refined_flour_overuse"]
    },
    {
      "id": "contra.high_bp.sodium_cap",
      "when": {
        "conditions": ["high_bp"]
      },
      "targets": {
        "sodium_mg": { "max": 1500 }
      },
      "forbid": ["salt_heavy_snacks", "pickles_daily", "instant_noodles_soups"]
    },
    {
      "id": "general.ultra_processed_limit",
      "when": {
        "conditions": ["*"]
      },
      "caution": ["ultra_processed", "deep_fried_sweets"],
      "notes": "Prefer home-cooked, minimally processed foods."
    },
    {
      "id": "general.caffeine_cap",
      "when": {
        "conditions": ["*", "!pregnancy", "!lactation"]
      },
      "targets": {
        "caffeine_cups": { "max": 2 }
      }
    }
  ]
}
