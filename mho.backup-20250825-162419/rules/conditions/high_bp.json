{
  "condition": "high_bp",
  "version": 1,
  "match": {
    "anyOf": ["high bp", "hypertension", "htn", "high blood pressure"]
  },
  "avoid": [
    "high-sodium foods",
    "processed meats",
    "pickles and papads (frequent)",
    "instant noodles/soups",
    "salty snacks",
    "excess caffeine (>2 cups/day)",
    "alcohol (limit/avoid)"
  ],
  "prefer": [
    "fresh vegetables and fruits (DASH-style)",
    "whole grains",
    "low-fat dairy (if tolerated)",
    "legumes",
    "unsalted nuts and seeds",
    "olive/mustard/groundnut oils (measured)"
  ],
  "targets": {
    "sodium_mg": { "max": 1500 },
    "potassium_foods": { "emphasize": true, "contraindicated_if": ["ckd", "potassium_high"] }
  },
  "flags": {
    "dash_pattern": true,
    "caffeine_cap": 2,
    "exercise_focus": true
  },
  "notes": [
    "Aim for <1500 mg sodium/day; read labels and cook with measured salt.",
    "Encourage regular walks and weight management; monitor BP at home."
  ]
}
