{
  "condition": "ckd",
  "version": 1,
  "match": {
    "anyOf": ["ckd", "chronic kidney disease", "renal disease", "kidney failure", "nephropathy"]
  },
  "avoid": [
    "high-sodium foods",
    "packaged/processed snacks",
    "instant soups/noodles",
    "salt substitutes containing potassium",
    "very high-potassium fruits/vegs (limit per stage)",
    "high-phosphorus colas",
    "organ meats"
  ],
  "prefer": [
    "fresh, minimally processed foods",
    "controlled-sodium cooking",
    "lower-potassium produce (as per stage)",
    "adequate but not excessive protein",
    "healthy fats (measured)"
  ],
  "targets": {
    "sodium_mg": { "max": 2000 },
    "protein_g_per_kg": { "range": [0.6, 0.8] },
    "potassium_mg": { "stage_dependent": true },
    "phosphorus_mg": { "stage_dependent": true }
  },
  "flags": {
    "fluid_monitoring": true,
    "electrolyte_watch": ["potassium", "phosphorus"],
    "bp_focus": true
  },
  "notes": [
    "Adjust potassium/phosphorus based on CKD stage and labs.",
    "Prefer home-cooked meals with measured salt.",
    "Coordinate protein targets with clinician/dietitian."
  ]
}
