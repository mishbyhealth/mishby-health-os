{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://glowell.local/schemas/healthForm.schema.json",
  "title": "GloWell Health Form",
  "type": "object",
  "required": ["fullName", "age", "gender", "goal"],
  "properties": {
    "fullName": { "type": "string", "minLength": 2, "title": "Full Name" },
    "age": { "type": "integer", "minimum": 1, "maximum": 120, "title": "Age" },
    "gender": { "type": "string", "enum": ["male", "female", "other"], "title": "Gender" },
    "goal": { "type": "string", "enum": ["weight_loss", "fitness", "diabetes_support", "heart_health"], "title": "Primary Goal" },
    "heightCm": { "type": "number", "minimum": 50, "maximum": 250, "title": "Height (cm)" },
    "weightKg": { "type": "number", "minimum": 10, "maximum": 300, "title": "Weight (kg)" },
    "diet": { "type": "string", "enum": ["veg", "nonveg", "eggitarian", "jain"], "title": "Diet Type" },
    "allergies": { "type": "array", "items": { "type": "string" }, "title": "Allergies (optional)" }
  },
  "additionalProperties": false
}
